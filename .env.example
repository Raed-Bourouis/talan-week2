# GraphRAG Configuration Example
# Copy this file to .env and fill in your values

# ──────────────────────────────────────────────────────────────
# Neo4j Graph Database
# ──────────────────────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30

# ──────────────────────────────────────────────────────────────
# LLM Provider Configuration
# ──────────────────────────────────────────────────────────────
# Choose provider: openai, mistral, or local
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# Mistral Configuration (alternative to OpenAI)
# MISTRAL_API_KEY=your-mistral-api-key-here
# MISTRAL_MODEL=mistral-large-latest

# Local LLM Configuration (Ollama, LM Studio, etc.)
# LOCAL_LLM_URL=http://localhost:11434
# LOCAL_LLM_MODEL=mistral

# ──────────────────────────────────────────────────────────────
# Vector Store Configuration
# ──────────────────────────────────────────────────────────────
# Choose: pgvector, chromadb, qdrant
VECTOR_STORE_TYPE=pgvector
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.7

# ChromaDB Configuration (if using ChromaDB)
# CHROMADB_HOST=localhost
# CHROMADB_PORT=8000
# CHROMADB_COLLECTION_NAME=financial_documents

# ──────────────────────────────────────────────────────────────
# Episodic Memory Configuration
# ──────────────────────────────────────────────────────────────
EPISODIC_MEMORY_MAX_EPISODES=1000
EPISODIC_MEMORY_RECALL_TOP_K=3
EPISODIC_MEMORY_MIN_SIMILARITY=0.5
EPISODIC_MEMORY_ENABLE_PERSISTENCE=true

# ──────────────────────────────────────────────────────────────
# RAG Orchestration Configuration
# ──────────────────────────────────────────────────────────────
RAG_DEFAULT_TOP_K=5
RAG_MAX_TOP_K=20
RAG_USE_HYBRID_SEARCH=true
RAG_RERANKING_ENABLED=false
RAG_CONTEXT_WINDOW_SIZE=4000

# ──────────────────────────────────────────────────────────────
# Knowledge Graph Configuration
# ──────────────────────────────────────────────────────────────
KG_MAX_TRAVERSAL_DEPTH=3
KG_CACHE_ENABLED=true
KG_CACHE_TTL=300

# ──────────────────────────────────────────────────────────────
# Performance & Caching
# ──────────────────────────────────────────────────────────────
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=600
MAX_CONCURRENT_QUERIES=10
QUERY_TIMEOUT_SECONDS=30

# ──────────────────────────────────────────────────────────────
# Security
# ──────────────────────────────────────────────────────────────
ENABLE_QUERY_VALIDATION=true
MAX_QUERY_LENGTH=5000

# ──────────────────────────────────────────────────────────────
# Logging
# ──────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
