# ──────────────────────────────────────────────
# F360 – Environment Configuration
# Copy this file to .env and fill in your values
# ──────────────────────────────────────────────

# ── App ──
APP_NAME=F360-Financial-Command-Center
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_SECRET_KEY=change-me-to-a-random-64-char-string

# ── PostgreSQL ──
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=f360
POSTGRES_USER=f360_user
POSTGRES_PASSWORD=f360_secret_password

# ── Neo4j ──
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_secret_password

# ── OpenAI ──
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ── JWT ──
JWT_SECRET_KEY=change-me-jwt-secret-key-64-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ── pgvector ──
PGVECTOR_COLLECTION=f360_documents
EMBEDDING_DIMENSION=1536

# ── Upload ──
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50
